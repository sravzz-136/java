import java.util.Scanner;

public class StarPattern {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);
        int n = scanner.nextInt();
           scanner.close();
         for (int i = 1; i <= n; i++) {
            
            int numberOfStars = 2 * i - 1;
            

            for (int j = 1; j <= numberOfStars; j++) {
                System.out.print("*");
                if (j < numberOfStars) {
                    System.out.print(" ");
                }
            }
            System.out.println();
        }
    }
}

